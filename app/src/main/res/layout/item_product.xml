<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/deleteProductIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:padding="16dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/cartProductPriceTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cartProductPriceTv"
        app:srcCompat="@drawable/ic_remove" />

    <ImageView
        android:id="@+id/cartProductIv"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/cartProductNameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/cartProductIv"
        app:layout_constraintEnd_toStartOf="@+id/cartProductPriceTv"
        app:layout_constraintStart_toEndOf="@+id/cartProductIv"
        app:layout_constraintTop_toTopOf="@+id/cartProductIv"
        app:layout_constraintVertical_bias="0.516"
        tools:text="Название" />

    <TextView
        android:id="@+id/cartProductPriceTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/cartProductNameTv"
        app:layout_constraintEnd_toStartOf="@+id/deleteProductIv"
        app:layout_constraintTop_toTopOf="@+id/cartProductNameTv"
        tools:text="Цена" />

</androidx.constraintlayout.widget.ConstraintLayout>